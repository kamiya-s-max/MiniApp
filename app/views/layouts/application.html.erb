<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "application", "data-turbolinks-track": 'reload' %>

  </head>

  <body>
    <div class="navbar-fixed">
      <nav class="red lighten-2">
        <div class="nav-wrapper" >
          <%= link_to 'BlogApp', posts_path,  { :class => "brand-logo" } %>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
          <% if user_signed_in? %>
            <li><a class="post" href="/posts/new">post</a></li>
            <li><%= link_to "sign_out", destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "sign_up", new_user_registration_path, :class => 'post'%></li>
            <li><%= link_to "sign_in", new_user_session_path, :class => 'post' %></li>
          <% end %>
          </ul>
        </div>
      </nav>
    </div>
      <div class="container">
        <%= yield %>
      </div>
  </body>
</html>
